# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /game                       controllers.Application.createGame
GET     /game/:name/:uuid           controllers.Application.game(name: String, uuid: String)

GET     /websocket                  controllers.Application.websocket
GET     /gamestream                 controllers.Application.gamestream

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
